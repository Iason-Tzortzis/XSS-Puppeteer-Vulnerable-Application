<!DOCTYPE html>
<html>
  <head>
    <title>Complaints Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="complaints.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home">Vulnerable Application</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/complaints">Complaint Form</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/messages">Received Messages</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Sign Out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1 class="title mb-5">Complaint form</h1>

      <form action="/complaints" method="post">
        <div class="row mb-3">
          <label for="email" class="form-label col-12">email</label>
          <div class="col-12">
            <input type="text" name="email" class="form-control" />
          </div>
        </div>
        <div class="row mb-3">
          <label for="complaint" class="form-label col-12">complaint</label>
          <div class="col-12">
            <textarea type="text" name="complaint" class="form-control" /></textarea>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>
      <% if(is_successfull){ %>
      <h1 id="Success-Header"><%= message %></h1>
      <% }else{ %>
      <h1 id="Failure-Header"><%= message %></h1>
      <% } %>
    </div>
  </body>
</html>
